{
    "extends": "./tsconfig.json",   // 继承主配置。
    "include": [
      "app/lib/DynamicContent.tsx", // 指定要编译的组件。
      "app/lib/SmartLink.tsx",      // 指定要编译的组件。
      "app/index.js",               // 包含 index.js。
      "app/index.d.ts"              // 包含 index.js。
    ],
    "compilerOptions": {
      "outDir": "./dist",           // 输出目录。
      "noEmit": false,              // 确保输出编译结果。
      "jsx": "react-jsx",
      "removeComments": true,       // 移除注释。
    }
  }